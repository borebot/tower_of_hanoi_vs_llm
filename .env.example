# --- Flask Settings ---
# This sets the port the Flask web server will run on.
FLASK_RUN_PORT=5000

# --- LLM Settings ---
# Set the default LLM provider.
# Options: "ollama", "gemini", "claude", "openai"
LLM_PROVIDER=ollama

# Set the default model for the chosen provider.
# For Ollama, this could be "llama3", "codellama", etc.
# For cloud providers, this is often selected in the UI, but you can set a default here.
LLM_MODEL=

# --- API Keys and URLs ---
# If you are using a local Ollama server, provide its URL here.
OLLAMA_API_URL=http://localhost:11434

# Add your API keys for the cloud-based LLM providers you want to use.
# You only need to fill in the key for the provider you have selected.
GEMINI_API_KEY=
CLAUDE_API_KEY=
OPENAI_API_KEY=

# --- Game Settings ---
# The maximum number of moves the LLM can make before the game ends.
MAX_MOVES=200

# --- UI Settings ---
# This setting is not currently used in the application.
STREAMING_RESPONSE=False
